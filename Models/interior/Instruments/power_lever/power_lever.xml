<?xml version="1.0"?>

<PropertyList>

 <path>power.ac</path>


  <animation>
	<object-name>lever</object-name>
	<object-name>base</object-name>
	<object-name>fric-knob</object-name>
	<object-name>mixture</object-name>
	<object-name>condition</object-name>
	<type>material</type>
	<emission> 
		<factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
		<red>0.50</red>
		<green>0.25</green>
		<blue>0.25</blue>
	</emission>
  </animation> 

<!-- THROTTLE -->
 <animation>
	<type>rotate</type>
	<object-name>lever</object-name>
	<property>controls/engines/engine/throttle</property>
	<interpolation>
		<entry><ind>0</ind><dep>40</dep></entry>
		<entry><ind>1</ind><dep>0</dep></entry>
	</interpolation>
	<center>
		<x-m> 0 </x-m>
		<y-m> 0 </y-m>
		<z-m> 0 </z-m>
	</center>
	<axis>
		<x> 0 </x>
		<y> 1 </y>
		<z> 0</z>
	</axis>
 </animation>


  <animation>
	<type>pick</type>
        <object-name>lever</object-name>
        <action>
		<button>3</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>controls/engines/engine/throttle</property>
			<step>0.1</step>
			<min>0</min>
			<max>1</max>
		</binding>
        </action>
  </animation>

  <animation>
	<type>pick</type>
        <object-name>lever</object-name>
        <action>
		<button>4</button>
		<repeatable>true</repeatable>
		<binding>
                	<command>property-adjust</command>
                	<property>controls/engines/engine/throttle</property>
                	<step>-0.1</step>
                	<min>0</min>
                	<max>1</max>
		</binding>
	</action>
  </animation>

<!-- MIXTURE -->

 <animation>
	<type>rotate</type>
	<object-name>mixture</object-name>
	<property>controls/engines/engine/mixture</property>
	<interpolation>
		<entry><ind>0</ind><dep>40</dep></entry>
		<entry><ind>1</ind><dep>0</dep></entry>
	</interpolation>
	<center>
		<x-m> 0 </x-m>
		<y-m> 0 </y-m>
		<z-m> 0 </z-m>
	</center>
	<axis>
		<x> 0 </x>
		<y> 1 </y>
		<z> 0</z>
	</axis>
  </animation>

  <animation>
	<type>pick</type>
        <object-name>mixture</object-name>
        <action>
		<button>3</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>controls/engines/engine/mixture</property>
			<step>0.1</step>
			<min>0</min>
			<max>1</max>
		</binding>
	</action>
  </animation>

  <animation>
	<type>pick</type>
	<object-name>mixture</object-name>
	<action>
		<button>4</button>
		<repeatable>true</repeatable>
		<binding>
                	<command>property-adjust</command>
                	<property>controls/engines/engine/mixture</property>
                	<step>-0.1</step>
                	<min>0</min>
                	<max>1</max>
		</binding>
	</action>
  </animation>


<!-- FRICTION -->

  <animation>
	<type>rotate</type>
	<object-name>fric-knob</object-name>
	<property>instrumentation/fric-knob</property>
	<interpolation>
		<entry><ind>0.01</ind><dep>90</dep></entry>
		<entry><ind>0.05</ind><dep>45</dep></entry>
		<entry><ind>0.1 </ind><dep> 0</dep></entry>
	</interpolation>
	<center>
		<x-m> 0     </x-m>
		<y-m> 0     </y-m>
		<z-m> 0.042 </z-m>
	</center>
	<axis>
		<x> 0 </x>
		<y> 1 </y>
		<z> 0 </z>
	</axis>
  </animation>


  <animation>
	<type>pick</type>
        <object-name>fric-knob</object-name>
        <action>
		<button>4</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>instrumentation/fric-knob</property>
			<step>0.01</step>
			<min> 0.01</min>
			<max> 0.10</max>
		</binding>
        </action>
  </animation>

  <animation>
	<type>pick</type>
	<object-name>fric-knob</object-name>
	<action>
		<button>3</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>instrumentation/fric-knob</property>
			<step>-0.01</step>
			<min>0.01</min>
			<max>0.10</max>
		</binding>
	</action>
    </animation>

</PropertyList>
