  <animation>
	<type>translate</type>
	<object-name>yoke-RH</object-name>
	<object-name>yoke-LH</object-name>
	<property>controls/flight/elevator</property>
	<factor> 0.07 </factor>
	<axis>
		<x> -1   </x>
		<y>  0   </y>
		<z> -0.2 </z>
	</axis>
  </animation>

  <animation>
	<type>rotate</type>
	<object-name>yoke-RH</object-name>
	<property>surface-positions/left-aileron-pos-norm</property>
	<factor> 45.0</factor>
	<center>
		<x-m> -0.532 </x-m>
		<y-m>  0.270 </y-m>
		<z-m>  0.047 </z-m>
	</center>
	<axis>
		<x> -1   </x>
		<y>  0   </y>
		<z> -0.2 </z>
	</axis>
  </animation> 

  <animation>
	<type>rotate</type>
     	<object-name>yoke-LH</object-name>
	<property>surface-positions/left-aileron-pos-norm</property>
	<factor> 45.0</factor>
	<center>
		<x-m> -0.532 </x-m>
		<y-m> -0.270 </y-m>
		<z-m>  0.047 </z-m>
	</center>
	<axis>
		<x> -1   </x>
		<y>  0   </y>
		<z> -0.2 </z>
	</axis>
  </animation> 

